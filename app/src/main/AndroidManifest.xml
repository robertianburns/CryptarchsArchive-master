<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="robertianburns.cryptarchsarchive">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/ActivityTheme.Primary.Base.Light">
        <activity android:name="robertianburns.cryptarchsarchive.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="robertianburns.cryptarchsarchive.GrimoireMainmenuActivity" />
        <activity android:name="robertianburns.cryptarchsarchive.GrimoireCardSelectionActivity" />
        <activity android:name="robertianburns.cryptarchsarchive.GrimoireCategorySelectionActivity" />
        <activity android:name="robertianburns.cryptarchsarchive.GrimoireCardActivity" />
        <activity
            android:name="robertianburns.cryptarchsarchive.LoreMainmenuActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
    </application>

</manifest>
